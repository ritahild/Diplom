<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ZniiActivity">
    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <!-- ToolBar widget -->
            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0F9D58"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    app:titleTextColor="#ffff" />


            <Button
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:textColor="#113E26"
                    android:text="t"
                    android:backgroundTint="#113E26"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/toolbar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:icon="@drawable/baseline_info_24"/>
            <Button
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:textColor="#113E26"
                    android:text="t"
                    android:backgroundTint="#113E26"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/toolbar"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="16dp" app:icon="@drawable/baseline_keyboard_arrow_left_24"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="-96dp"
                android:id="@+id/scrollView">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="вес"
                    android:id="@+id/geg"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.225"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="84dp"/>
            <EditText
                    android:id="@+id/num1"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:background="@android:color/white"
                    android:ems="10"

                    android:onClick="clearTextNum"
                    android:inputType="number"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="70dp"
                    android:layout_marginEnd="71dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="116dp"/>
            <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="дозировка"
                    android:id="@+id/gog"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.225"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="176dp"/>
            <EditText
                    android:id="@+id/num2"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:background="@android:color/white"
                    android:ems="10"

                    android:onClick="clearTextNum"
                    android:inputType="number"
                    app:layout_constraintTop_toBottomOf="@+id/num1"
                    android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="70dp" android:layout_marginEnd="71dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="обьем шприца"
                    android:id="@+id/gig"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.225"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="264dp"/>
            <EditText
                    android:id="@+id/num3"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:background="@android:color/white"
                    android:ems="10"

                    android:onClick="clearTextNum"
                    android:inputType="number"
                    app:layout_constraintTop_toBottomOf="@+id/num2"
                    android:layout_marginTop="36dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="70dp" android:layout_marginEnd="71dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="концентрация"


                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.225"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="348dp"
                    android:id="@+id/gug"/>
            <EditText
                    android:id="@+id/num4"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:background="@android:color/white"
                    android:ems="10"

                    android:onClick="clearTextNum"
                    android:inputType="number"
                    app:layout_constraintTop_toBottomOf="@+id/num3"
                    android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="70dp" android:layout_marginEnd="71dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="скорость"
                    android:id="@+id/gag"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.213"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="444dp"/>
            <EditText
                    android:id="@+id/num5"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:background="@android:color/white"
                    android:ems="10"

                    android:onClick="clearTextNum"
                    android:inputType="number"
                    app:layout_constraintTop_toBottomOf="@+id/num4"
                    android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="70dp" android:layout_marginEnd="71dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:id="@+id/result"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:background="@android:color/white"
                    android:text="result"
                    android:textColorLink="#673AB7"
                    android:textSize="25sp"

                    app:layout_constraintTop_toBottomOf="@+id/num5" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"/>
            <Button
                    android:id="@+id/sum"
                    android:layout_width="132dp"
                    android:layout_height="54dp"
                    android:backgroundTint="#204D55"
                    android:onClick="doSum"
                    android:text="расчитать"
                    app:layout_constraintTop_toBottomOf="@+id/result" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>