<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DozaActivity">
    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <!-- ToolBar widget -->
            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0F9D58"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    app:titleTextColor="#ffff" />


            <Button
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"



                    android:textColor="#113E26"
                    android:text="t"
                    android:backgroundTint="#113E26"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/toolbar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:icon="@drawable/baseline_info_24"/>
            <Button
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"

                    android:textColor="#113E26"
                    android:text="t"
                    android:backgroundTint="#113E26"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/toolbar"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="16dp" app:icon="@drawable/baseline_keyboard_arrow_left_24"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                tools:layout_editor_absoluteY="-46dp" tools:layout_editor_absoluteX="0dp">


        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="match_parent">

            <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="дозировка"
                    android:id="@+id/y1"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.281"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="80dp"/>
            <EditText
                    android:id="@+id/doz"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="64dp"
                    android:background="@android:color/white"
                    android:ems="10"
                    android:onClick="clearTextNum"
                    android:inputType="number"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="77dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="112dp"/>
            <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:id="@+id/y2"
                    android:text="количество вещества"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.397"
                    app:layout_constraintTop_toBottomOf="@+id/doz" android:layout_marginTop="24dp"/>
            <EditText
                    android:id="@+id/fo"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:background="@android:color/white"
                    android:ems="10"

                    android:onClick="clearTextNum2"
                    android:inputType="number"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/doz" android:layout_marginTop="64dp"
                    android:layout_marginStart="64dp" android:layout_marginEnd="77dp"/>
            <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="вес"
                    android:id="@+id/y3"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.281"
                    app:layout_constraintTop_toBottomOf="@+id/doz" android:layout_marginTop="140dp"/>
            <EditText
                    android:id="@+id/kg"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:background="@android:color/white"
                    android:ems="10"

                    android:onClick="clearTextNum3"
                    android:inputType="number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fo" android:layout_marginTop="56dp"
                    android:layout_marginStart="64dp" android:layout_marginEnd="77dp"
                    app:layout_constraintHorizontal_bias="1.0"/>
            <TextView
                    android:id="@+id/result"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:background="@android:color/white"
                    android:text="result"
                    android:textColorLink="#673AB7"
                    android:textSize="25sp"
                    android:layout_marginEnd="39dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/kg" android:layout_marginTop="60dp"/>
            <Button
                    android:id="@+id/res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#204D55"
                    android:onClick="doSum"
                    android:text="расчитать"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/result"
                    android:layout_marginTop="20dp" app:layout_constraintHorizontal_bias="0.498"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>